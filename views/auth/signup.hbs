<div id="register">
    <h2>Regístrate</h2>



    <form action="/signup" method="POST" id="form-container">

        <label for="name">Nombre</label>

        <input id="name" type="text" name="name" placeholder="Nombre" required/>

       {{!--  <br /><br />

        <label for="userType">Selecciona tu tipo de usuario:</label>

        <select name="userType" multiple size="3" required>
            <option value="donante">Donante</option>
            <option value="beneficiado">Beneficiado</option>
            <option value="asilo">Asilo</option>
        </select>
 --}}
        <br /><br />

        <label for="email">Correo</label>

        <input id="email" type="email" name="email" placeholder="cuenta@correo.com" required/>

        <br /><br />

        <label for="password">Contraseña</label>

        <input id="password" type="password" name="password" placeholder="*********" required/>

        {{#if message}}

        <div class="error-message">{{ message }}</div>

        {{/if}}

        <br><br>



        <button>Crear cuenta</button>



        <p class="account-message">

            ¿Ya tienes una cuenta registrada?

            <a href="/login">Ingresa</a>

        </p>

    </form>
</div>